    background: {{color-primary-light}};
}
QSpinBox#config_spin::down-button:hover {
    background: {{color-primary-light}};
}
QSpinBox#config_spin::up-button:pressed {
    background: {{color-primary}};
}
QSpinBox#config_spin::down-button:pressed {
    background: {{color-primary}};
}
QSpinBox#config_spin::up-arrow {
    image: url({{icons-path}}/arrow_up.svg);
