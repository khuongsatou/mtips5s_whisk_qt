/* ── Aspect Ratio Visual Selector ── */
QPushButton#ratio_option_btn {
    background-color: {{bg-primary}};
    border: 1.5px solid {{border-light}};
    border-radius: 10px;
    padding: 4px;
    min-width: 52px;
}
