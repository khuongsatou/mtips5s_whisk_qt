    background-color: {{bg-secondary}};
    border-color: {{border-light}};
    opacity: 0.5;
}
QPushButton#ratio_option_btn:disabled QLabel#ratio_option_text {
    color: {{text-secondary}};
}
QFrame#ratio_shape {
    background-color: {{border-light}};
    border: none;
    border-radius: 4px;
}
QPushButton#ratio_option_btn:checked QFrame#ratio_shape {
