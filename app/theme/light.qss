/* ===== Whisk Desktop — Light Theme ===== */
/* Revised: refined spacing, harmonised palette, proper focus/pressed states */

/* --- Global --- */
QWidget {
    background-color: {{bg-primary}};
    color: {{text-primary}};
    font-size: 13px;
    selection-background-color: {{color-primary-light}};
    selection-color: {{text-primary}};
}
QLabel, QCheckBox, QRadioButton {
    background: transparent;
}
QTableWidget QWidget {
    background: transparent;
}

/* ─────────────── Sidebar ─────────────── */
QWidget#sidebar {
    background-color: {{color-primary}};
}
QLabel#sidebar_title {
    color: {{text-inverse}};
    font-size: 18px;
    font-weight: 700;
    padding: 0;
    letter-spacing: 0.5px;
}
QLabel#sidebar_logo {
    background-color: {{color-primary-dark}};
    border-radius: 16px;
    padding: 0px;
}
QLabel#sidebar_subtitle {
    color: #B4A7D6;
    font-size: 11px;
    padding: 0 20px 20px 20px;
}
QPushButton#nav_button {
    background-color: transparent;
    color: #D6CCEE;
    border: none;
    border-left: 3px solid transparent;
    padding: 14px 20px;
    text-align: left;
    font-size: 13px;
    font-weight: 500;
}
QPushButton#nav_button:hover {
    background-color: #8B5CF6;
    color: #FFFFFF;
}
QPushButton#nav_button[active="true"] {
    background-color: #6D28D9;
    border-left: 3px solid #FFFFFF;
    color: #FFFFFF;
    font-weight: 600;
}
QPushButton#sidebar_collapse_btn {
    background-color: transparent;
    color: #B4A7D6;
    border: none;
    border-top: 1px solid #6D28D9;
    padding: 12px 20px;
    text-align: left;
    font-size: 12px;
    font-weight: 500;
}
QPushButton#sidebar_collapse_btn:hover {
    background-color: #8B5CF6;
    color: #FFFFFF;
}
QPushButton#sidebar_collapse_btn:pressed {
    background-color: #6D28D9;
}
/* Collapsed sidebar overrides */
QPushButton#nav_button[collapsed="true"] {
    padding: 14px 4px;
    text-align: center;
    border-left: none;
    font-size: 18px;
}
QPushButton#nav_button[collapsed="true"][active="true"] {
    border-left: none;
}
QLabel#sidebar_title[collapsed="true"] {
    padding: 20px 4px 2px 4px;
    text-align: center;
    font-size: 22px;
}
QPushButton#sidebar_collapse_btn[collapsed="true"] {
    padding: 12px 4px;
    text-align: center;
    font-size: 14px;
}
QPushButton#sidebar_logout_btn {
    background-color: rgba(255, 255, 255, 0.1);
    color: #FCA5A5;
    border: none;
    border-radius: 6px;
    padding: 10px 16px;
    margin: 4px 8px 12px 8px;
    font-size: 12px;
    font-weight: 500;
    text-align: left;
}
QPushButton#sidebar_logout_btn:hover {
    background-color: rgba(239, 68, 68, 0.3);
    color: #FFFFFF;
}
QPushButton#sidebar_logout_btn[collapsed="true"] {
    padding: 10px 4px;
    text-align: center;
    font-size: 14px;
    margin: 4px 4px 12px 4px;
}

